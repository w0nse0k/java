<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
  <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} [%t] %level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="kr.mjc.jacob" level="info"/>

  <root level="info">
    <appender-ref ref="Console"/>
  </root>
</configuration>